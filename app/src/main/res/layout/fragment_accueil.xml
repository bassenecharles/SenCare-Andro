<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:paddingTop="60dp"
    android:background="@color/whiteTransparent"
    tools:context=".ui.AccueilFragment">

    <TextView
        android:id="@+id/total_patients_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Patients: 100"
        android:textSize="24sp"
        android:textColor="@color/primaryColor"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/total_gain_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Gain: 0"
        android:textSize="24sp"
        android:textColor="@color/primaryColor"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/depenses_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dépenses: 0"
        android:textSize="24sp"
        android:textColor="@color/primaryColor"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/real_gain_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gains Réels: 0"
        android:textSize="24sp"
        android:textColor="@color/primaryColor"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/app_description_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bienvenue Docteur Issiaka FALL"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/darkGrey"
        android:gravity="center"/>

</LinearLayout>
